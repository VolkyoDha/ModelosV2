<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Sistema de Horarios</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h2><i class="fas fa-calendar-alt"></i> Horarios</h2>
            </div>
            
            <ul class="sidebar-menu">
                <li class="menu-item">
                    <a href="/" class="menu-link">
                        <i class="fas fa-home"></i>
                        <span>Inicio</span>
                    </a>
                </li>
                
                <li class="menu-section">
                    <span class="menu-section-title">Gestión</span>
                </li>
                
                <li class="menu-item">
                    <a href="/profesores" class="menu-link">
                        <i class="fas fa-chalkboard-teacher"></i>
                        <span>Profesores</span>
                    </a>
                </li>
                
                <li class="menu-item">
                    <a href="/materias" class="menu-link">
                        <i class="fas fa-book"></i>
                        <span>Materias</span>
                    </a>
                </li>
                
                <li class="menu-item">
                    <a href="/horarios" class="menu-link">
                        <i class="fas fa-clock"></i>
                        <span>Horarios</span>
                    </a>
                </li>
                
                <li class="menu-section">
                    <span class="menu-section-title">Herramientas</span>
                </li>
                
                <li class="menu-item">
                    <a href="/horarios/calcular" class="menu-link">
                        <i class="fas fa-calculator"></i>
                        <span>Calcular Horario</span>
                    </a>
                </li>
                
                <li class="menu-item">
                    <a href="/materias/load" class="menu-link">
                        <i class="fas fa-upload"></i>
                        <span>Cargar Malla</span>
                    </a>
                </li>
                
                <li class="menu-item">
                    <a href="/horarios/resumen" class="menu-link">
                        <i class="fas fa-chart-bar"></i>
                        <span>Resumen</span>
                    </a>
                </li>
                
                <li class="menu-item">
                    <a href="/horarios/conflictos" class="menu-link">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>Conflictos</span>
                    </a>
                </li>
                
                <li class="menu-section">
                    <span class="menu-section-title">Información</span>
                </li>
                
                <li class="menu-item">
                    <a href="/estadisticas" class="menu-link">
                        <i class="fas fa-chart-pie"></i>
                        <span>Estadísticas</span>
                    </a>
                </li>
                
                <li class="menu-item">
                    <a href="/buscar" class="menu-link">
                        <i class="fas fa-search"></i>
                        <span>Búsqueda</span>
                    </a>
                </li>
                
                <li class="menu-item">
                    <a href="/ayuda" class="menu-link">
                        <i class="fas fa-question-circle"></i>
                        <span>Ayuda</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <div class="header-content">
                    <h1><%= title %></h1>
                    <div class="header-actions">
                        <button class="btn btn-secondary" onclick="toggleSidebar()">
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>
                </div>
            </header>

            <!-- Flash Messages -->
            <% if (typeof flash !== 'undefined' && flash.success) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    <%= flash.success %>
                </div>
            <% } %>
            
            <% if (typeof flash !== 'undefined' && flash.error) { %>
                <div class="alert alert-error">
                    <i class="fas fa-exclamation-circle"></i>
                    <%= flash.error %>
                </div>
            <% } %>

            <!-- Page Content -->
            <div class="content">
                <%- body %>
            </div>
        </main>
    </div>

    <script src="/js/main.js"></script>
    <script src="/js/sidebar.js"></script>
</body>
</html> 