<div class="materia-load">
  <div class="page-header">
    <div class="page-title">
      <h2>Cargar Malla Curricular</h2>
    </div>
    <div class="page-actions">
      <a href="/materias" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
      </a>
    </div>
  </div>

  <div class="content-section">
    <form action="/materias/load" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="archivo" class="form-label">Archivo JSON</label>
        <input type="file" id="archivo" name="archivo" accept="application/json" class="form-control" required>
      </div>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
      <button type="submit" class="btn btn-primary">
        <i class="fas fa-upload"></i> Cargar
      </button>
    </form>
  </div>
</div>
