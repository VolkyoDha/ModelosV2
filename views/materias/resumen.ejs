<div class="materia-resumen">
  <div class="page-header">
    <div class="page-title">
      <h2>Resumen Semestral de Materias</h2>
    </div>
    <div class="page-actions">
      <a href="/materias" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
      </a>
      <a href="/materias/load" class="btn btn-info">
        <i class="fas fa-upload"></i> Cargar Malla
      </a>
      <a href="/materias#estadisticas" class="btn btn-success">
        <i class="fas fa-chart-bar"></i> Estadísticas
      </a>
    </div>
  </div>

  <div class="content-section">
    <% Object.keys(resumen).forEach(sem => { %>
      <h3>Semestre <%= sem %></h3>
      <ul class="list-group mb-4">
        <% resumen[sem].materias.forEach(m => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><%= m.codigo %> - <%= m.nombre %></span>
            <span class="badge badge-primary"><%= m.horasSemana %>h/semana</span>
          </li>
        <% }) %>
        <li class="list-group-item list-group-item-info">
          Créditos: <%= resumen[sem].totalCreditos %> | Horas/Semana: <%= resumen[sem].totalHorasSemana %> | Horas/Semestre: <%= resumen[sem].totalHorasSemestre %>
        </li>
      </ul>
    <% }) %>
  </div>
</div>
