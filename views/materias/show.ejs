<div class="materia-detail">
  <div class="detail-header">
    <h2>Detalles de la Materia</h2>
    <div class="header-actions">
      <a href="/materias" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
      </a>
      <a href="/materias/<%= materia.id %>/edit" class="btn btn-primary">
        <i class="fas fa-edit"></i> Editar
      </a>
    </div>
  </div>

  <div class="detail-content">
    <div class="info-grid">
      <div class="info-card">
        <h3>Información General</h3>
        <div class="info-item">
          <label>Nombre:</label>
          <span><%= materia.nombre %></span>
        </div>
        <div class="info-item">
          <label>Código:</label>
          <span class="badge badge-info"><%= materia.codigo %></span>
        </div>
        <div class="info-item">
          <label>Créditos:</label>
          <span><%= materia.creditos %></span>
        </div>
        <div class="info-item">
          <label>Semestre:</label>
          <span class="badge badge-primary"> <%= materia.semestre %> </span>
        </div>
      </div>
      <div class="info-card">
        <h3>Horas</h3>
        <div class="info-item">
          <label>Teoría:</label>
          <span class="badge badge-primary"><%= materia.horasTeoria %>h</span>
        </div>
        <div class="info-item">
          <label>Práctica:</label>
          <span class="badge badge-success"><%= materia.horasPractica %>h</span>
        </div>
        <div class="info-item">
          <label>Laboratorio:</label>
          <span class="badge badge-warning"><%= materia.horasLaboratorio %>h</span>
        </div>
        <div class="info-item">
          <label>Total Horas/Semana:</label>
          <span class="badge badge-dark"><%= totalHoras %>h</span>
        </div>
        <div class="info-item">
          <label>Horas por Semestre:</label>
          <span class="badge badge-secondary"><%= horasSemestrales %>h</span>
        </div>
      </div>
    </div>

    <div class="info-card mt-4">
      <h3>Prerequisitos</h3>
      <% if (prerequisitos.length === 0) { %>
        <span class="badge badge-secondary">Sin prerequisitos</span>
      <% } else { %>
        <ul>
          <% prerequisitos.forEach(p => { %>
            <li><%= p.nombre %> (<%= p.codigo %>)</li>
          <% }) %>
        </ul>
      <% } %>
    </div>

    <% if (materia.descripcion) { %>
    <div class="info-card mt-4">
      <h3>Descripción</h3>
      <p><%= materia.descripcion %></p>
    </div>
    <% } %>
  </div>
</div>

